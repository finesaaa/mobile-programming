<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fragment_cd_iv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_cd_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Negara"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fragment_cd_tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kasus"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fragment_cd_tv_today_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kasus Hari Ini"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fragment_cd_tv_death"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kematian : "
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fragment_cd_tv_recovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sembuh : "
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:gravity="center"/>
</LinearLayout>