<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_c_rl"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="8dp"
  android:gravity="center">

  <ImageView
      android:id="@+id/item_c_iv_contact"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="16dp"
      android:src="@drawable/ic_baseline_contacts_24"
      app:tint="@android:color/holo_blue_dark" />

  <TextView
    android:id="@+id/item_c_tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_toEndOf="@id/item_c_iv_contact"
    android:text="Nama"
    android:textColor="@android:color/black"
    android:textSize="20sp"
    android:textStyle="bold" />

  <TextView
      android:id="@+id/item_c_tv_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/item_c_tv_name"
      android:layout_toEndOf="@id/item_c_iv_contact"
      android:text="Telepon"
      android:textSize="14sp" />

  <ImageView
    android:id="@+id/item_c_iv_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@id/item_c_iv_contact"
    android:layout_alignTop="@id/item_c_iv_contact"
    android:src="@drawable/ic_baseline_delete_24"
    app:tint="@android:color/holo_blue_dark" />

  <ImageView
    android:layout_marginEnd="12dp"
    android:id="@+id/item_c_iv_edit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toStartOf="@id/item_c_iv_delete"
    android:layout_alignBottom="@id/item_c_iv_contact"
    android:layout_alignTop="@id/item_c_iv_contact"
    android:src="@drawable/ic_baseline_edit_24"
    app:tint="@android:color/holo_blue_dark" />
</RelativeLayout>